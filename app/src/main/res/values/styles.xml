    <!-- 칩 스타일 1-->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 칩 스타일 2-->

    <style name="ChipStyle2" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/mRegular</item>
        <item name="closeIcon">@drawable/ic_clear_search_result</item>
        <item name="closeIconTint">@color/grey400</item>
        <item name="chipStartPadding">@dimen/dp_4</item>
        <item name="chipEndPadding">@dimen/dp_8</item>
        <item name="closeIconStartPadding">@dimen/dp_4</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/grey200</item>
    </style>

    <!-- 칩 스타일 3-->

    <style name="ChipStyle3" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/pretendardregular</item>
