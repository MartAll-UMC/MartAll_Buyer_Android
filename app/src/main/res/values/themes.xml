<resources>
    <!-- Base application theme. -->
    <style name="Theme.MartAll" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@color/primary400</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash_240dp</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.MartAll</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary400</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash_240dp</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.MartAll</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/white_round_top_border_20</item>
    </style>
</resources>