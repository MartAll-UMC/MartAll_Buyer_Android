            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookmark_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_primary400_r20"
                android:text="단골 추가"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/mart_profile_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/mart_profile_iv" />

            <LinearLayout
                android:id="@+id/follower_visiter_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/mart_profile_iv"
                app:layout_constraintStart_toStartOf="@id/mart_name_tv"
                app:layout_constraintTop_toBottomOf="@id/mart_hashtag_list_tv">

                <TextView
                    android:id="@+id/follower_guide_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardregular"
                    android:text="단골 수 "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/follower_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardregular"
                    android:text="0"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/divide_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/pretendardregular"
                    android:text="|"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/liked_guide_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/pretendardregular"
                    android:text="상품 찜 수 "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/liked_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/pretendardregular"
                    android:text="0"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/product_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendardregular"
                android:text="과일&amp;채소"
                android:textColor="@color/grey500"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/mart_profile_iv"
                app:layout_constraintTop_toBottomOf="@id/mart_profile_iv" />

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pretendardmedium"
                android:text="돌 바나나 1.2kg 1송이"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/product_category_tv"
                app:layout_constraintTop_toBottomOf="@id/product_category_tv" />

            <TextView
                android:id="@+id/product_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pretendardbold"
                android:text="5000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/product_name_tv"
                app:layout_constraintTop_toBottomOf="@id/product_name_tv" />

            <TextView
                android:id="@+id/price_guide_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardregular"
                android:text="원"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/product_price_tv"
                app:layout_constraintStart_toEndOf="@id/product_price_tv"
                app:layout_constraintTop_toTopOf="@id/product_price_tv" />

            <TextView
                android:id="@+id/product_detail_guide_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/pretendardsemibold"
                android:text="상품 상세 정보"
                android:textAppearance="@style/lSemiBold"
                app:layout_constraintStart_toStartOf="@id/mart_profile_iv"
                app:layout_constraintTop_toBottomOf="@id/price_guide_tv" />

            <ImageView
                android:id="@+id/product_detail_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_gray_square_r8"
                android:scaleType="fitStart"
                android:src="@drawable/product_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_detail_guide_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="6dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp">

            <ImageView
                android:id="@+id/like_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:onClick="toggleHeart"
                android:src="@drawable/ic_heart_line_20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/primary400" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardregular"
                android:text="찜"
                android:textAppearance="@style/xsRegular"
                app:layout_constraintEnd_toEndOf="@id/like_btn"
                app:layout_constraintStart_toStartOf="@id/like_btn"
                app:layout_constraintTop_toBottomOf="@id/like_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/cart_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_border8_grey200"
            android:gravity="center"
            android:text="장바구니"
            android:textAppearance="@style/mBold"
            android:textColor="@color/black" />

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/buy_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_border8"
            android:gravity="center"
            android:text="구매하기"
            android:textAppearance="@style/mBold"
            android:textColor="@color/white" />

